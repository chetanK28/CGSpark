@{
    ViewData["Title"] = "Home";
}

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Video Background with Overlay */
    .video-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        overflow: hidden;
        z-index: -1;
    }

    .video-background {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
    }

    .container-flex {
        display: flex;
        height: 80vh;
        gap: 20px;
        padding: 20px;
        position: relative;
        z-index: 1;
        color: white;
    }

    .section {
        flex: 1;
        overflow: hidden;
    }

    .image-section {
        background-image: url('./Images/capgemini logo.png');
        background-size: 50%;
        background-position: center;
        background-repeat: no-repeat;
        height: 400px;
        width: 150%;
    }


    .info-section {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

        .info-section h1 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }

        .info-section p {
            font-size: 1.25rem;
            line-height: 1.5;
            margin-bottom: 1.5rem;
            text-align: justify;
        }

    .btn-learn-more {
        background-color: #003874;
        color: white;
        padding: 10px 20px;
        font-size: 1rem;
        border: none;
        border-radius: 5px;
        text-decoration: none;
    }

        .btn-learn-more:hover {
            background-color: #0056b3;
        }

    /* Employee Portal Section */
    .employee-portal {
        background-color: rgba(255, 255, 255, 0.9);
        padding: 40px 20px;
        text-align: center;
        position: relative;
        z-index: 1;
    }

        .employee-portal h2 {
            font-size: 2rem;
            margin-bottom: 20px;
            color: #003874;
        }

    .portal-features {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 30px;
        margin-top: 30px;
    }

    .feature-box {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        width: 300px;
        text-align: left;
    }

        .feature-box h3 {
            color: #003874;
            margin-bottom: 10px;
        }

        .feature-box p {
            font-size: 1rem;
            color: #333;
        }
</style>

<!-- Video Background -->
<div class="video-container">
    <video autoplay muted loop class="video-background">
        <source src="./Images/Capgemini.mp4" type="video/mp4" />
        Your browser does not support the video tag.
    </video>
    <div class="overlay"></div>
</div>

<!-- Employee Portal Info Section -->
<div class="container-flex">
    <div class="section image-section"></div>
    <div class="section info-section">
        <h1>Welcome to Employee Portal</h1>
        <p>
            This portal is designed exclusively for employees. Access internal tools,
            manage your tasks, view important updates, and stay connected with your team.
            We are committed to supporting your professional journey with secure and efficient resources.
        </p>
        <a href="  " class="btn-learn-more">Get Started</a>
    </div>
</div>

<!-- Employee Portal Section -->
<div class="employee-portal">
    <h2>Explore Our Employee Portal</h2>
    <div class="portal-features">
        <div class="feature-box">
            <h3>Certifications</h3>
            <p>
                Track and manage employee certifications, training programs, and skill development initiatives with ease.
            </p>
        </div>
        <div class="feature-box">
            <h3>Code Bug Tracking</h3>
            <p>
                Integrated bug tracking system to report, assign, and resolve software issues efficiently across teams.
            </p>
        </div>
        <div class="feature-box">
            <h3>Achievements</h3>
            <p>
                Celebrate employee milestones, project completions, and performance awards through a centralized
                dashboard.
            </p>
        </div>
    </div>
</div>